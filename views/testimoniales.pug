extends ./layout/index
block contenido 
    main.container.mt-5 
        h1.text-center #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales.pug
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial 
                if(errores)
                    each error in errores 
                        .alert.alert-danger.col.text-center 
                            |#{error.mensaje}
            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimoniales", method="POST")
                        .form-goup 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)  
                        .form-group 
                            label(for="email") Email 
                            input#email(type="email", name="email", placeholder="Tu Email", class="form-control", value= email)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", class="form-control")= mensaje
                        input(type="submit", value="Enviar", class="btn btn-success btn-block")